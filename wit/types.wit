package example:cart-types@0.1.0;

/// Cart item structure
record cart-item {
    product-id: string,
    name: string,
    quantity: s32,
    price-cents: s64,
    category: string,
}

/// Shopping cart
record shopping-cart {
    items: list<cart-item>,
}

/// Standard plugin result - all plugins use this
record validation-result {
    ok: bool,
    error: string,
}
